                        <script>
                            function doLogin() {
                                var loginForm = document.forms['login'];
                                var sendinForm = document.forms['sendin'];
                                
                                if (loginForm && sendinForm) {
                                    sendinForm.username.value = loginForm.username.value;
                                    sendinForm.password.value = hexMD5('$(chap-id)' + loginForm.password.value + '$(chap-challenge)');
                                    sendinForm.submit();
                                    return false; 
                                }
                                return true; 
                            }
                        </script>
                        $(endif)
                        
                        <form class="customform" name="login" action="$(link-login-only)" method="post" $(if chap-id) onsubmit="return doLogin()" $(endif)>
